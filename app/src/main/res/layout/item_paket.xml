<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/item_paket_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/paket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="car Name"/>

        <TextView
            android:id="@+id/paket_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Rp 200.000 / hari"/>

        <TextView
            android:id="@+id/paket_overtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overtime 20.000"/>

        <TextView
            android:id="@+id/paket_tipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kota Bandar Lampung"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>

</LinearLayout>